<% tab_name = :client_info %>
<div class="container is-fluid">
  <h1 class="title is-1 has-text-centered has-mt-24 is-size-3-touch"> <%= fullname(user) %> </h1>
  <div class="columns">
    <div class="column is-2">
      <%= sidebar(client_sidebar_items) %>
    </div>
    <div class="column is-8 content" style="height: 150vh;">
      <%= client_tabs(tab_name) %>
      <%= customer_show(user) %>
      <%= customer_sales(user) %>
    </div>
    <div class="column">
      <div class="box has-mt-5 sticky hide-mob">
        <p>Search/Scan/Filter/Notes</p>
        <br/>
        <%= render 'admin/customers/clients/new_user_modal' %>
        <button id="open-modal" class="button is-primary"> New Client </button>
      </div>
    </div>
  </div>
</div> 

