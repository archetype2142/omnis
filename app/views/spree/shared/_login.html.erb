<div class="is-flex is-flex-centered is-full-height">
  <div class="column is-two-thirds" style="max-width: 600px">
    <div class="container">
      <h1 class="has-text-centered title is-1">Log in</h1>

      <div class="box">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="field">
            <%= f.label :email, class: "label" %>
            <div class="control has-icons-left has-icons-right">
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-envelope"></i>
              </span>
              <span class="icon is-small is-right">
                <i class="fab fa-check"></i>
              </span>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: "label" %>
            <div class="control has-icons-left">
              <%= f.password_field :password, autocomplete: "current-password", class: "input" %>
              <span class="icon is-small is-left">
                <i class="fas fa-lock"></i>
              </span>
            </div>
          </div>

        
          <% if devise_mapping.rememberable? %>
            <div class="field">
              <div class="control">
                <label class="checkbox">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </label>
              </div>
            </div>
          <% end %>

          <div class="control has-mb-24">
            <%= f.submit "Log in", class: "button is-link" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
